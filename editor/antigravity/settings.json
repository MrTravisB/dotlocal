{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLens": true,
  // "editor.fontFamily": "Input Mono",
  "editor.fontFamily": "Berkeley Mono",
  // "editor.fontFamily": "Optician Sans",
  "editor.fontSize": 16,
  "editor.guides.bracketPairs": "active",
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  "editor.smoothScrolling": true,
  "editor.wordWrap": "on",

  "explorer.autoReveal": false,

  "extensions.ignoreRecommendations": true,

  "files.associations": {
    "*.css": "tailwindcss",
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/vendor": true,
    "**/node_modules": true,
    "**/*.js.map": true,
    "**/Thumbs.db": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true,
  },
  "go.toolsManagement.autoUpdate": true,

  "javascript.preferences.quoteStyle": "single",

  "problems.autoReveal": false,

  "redhat.telemetry.enabled": false,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/vendor": true,
    "**/*.js.map": true,
    "**/dist": true,
  },
  "search.showLineNumbers": true,

  "security.workspace.trust.untrustedFiles": "open",

  "telemetry.telemetryLevel": "off",

  "terminal.external.osxExec": "iTerm.app",
  // "terminal.integrated.fontFamily": "Fira Mono for Powerline",
  "terminal.integrated.fontFamily": "Berkeley Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,

  "typescript.surveys.enabled": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  "workbench.colorCustomizations": {
    "window.newWindowDimensions": "maximized",
    "window.restoreWindows": "folders",
    "terminal.background": "#000000",
    "terminal.foreground": "#ffffff",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#6871ff",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightBlue": "#6871ff",
    "terminal.ansiBrightCyan": "#60fdff",
    "terminal.ansiBrightGreen": "#5ffa68",
    "terminal.ansiBrightMagenta": "#ff77ff",
    "terminal.ansiBrightRed": "#ff6e67",
    "terminal.ansiBrightWhite": "#ffffff",
    "terminal.ansiBrightYellow": "#fffc67",
    "terminal.ansiCyan": "#60fdff",
    "terminal.ansiGreen": "#5ffa68",
    "terminal.ansiMagenta": "#ff77ff",
    "terminal.ansiRed": "#ff6e67",
    "terminal.ansiWhite": "#c7c7c7",
    "terminal.ansiYellow": "#fffc67",
    "terminal.selectionBackground": "#c1deff",
    "terminalCursor.background": "#c7c7c7",
    "terminalCursor.foreground": "#ffffff",
    "editor.background": "#000000",
    "sideBar.background": "#000000",
    "sideBarSectionHeader.background": "#000000",
  },
  "workbench.editor.closeOnFileDelete": true,
  "workbench.list.openMode": "singleClick",
  "window.newWindowDimensions": "maximized",
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.tips.enabled": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}",
  "window.titleBarStyle": "custom",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.panel.defaultLocation": "bottom",

  "[javascript][typescript][json][typescriptreact][css]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "/Users/t/go/bin/golines ${file} -m 120 -t 4 -w",
      },
    ],
  },

  "better-comments.tags": [
    {
      "tag": "@tower-",
      "color": "#32a836",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false,
    },
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "note",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#ffffff",
      "bold": true,
      "italic": false,
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
  ],
  "workbench.editor.showTabs": "single",

  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": "explicit",
    "source.fixAll.eslint": "explicit",
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorTheme": "GitHub Dark Default",
  "cursor.cpp.enablePartialAccepts": true,
  "eslint.autoFixOnSave": true,

  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "python.languageServer": "None",
  "cursorpyright.disableLanguageServices": true,
}
